# vim: set noet:

CC=g++
CFLAGS=-I. -lpthread
OUTDIR=build
SOURCES=main.cpp
EXE=quicksort_basic
OBJ=$(patsubst %.cpp, %.o, $(SOURCES))

all: $(EXE)

# $@ is a variable for whatever is on left of rule
# $^ is first thing on right of it, I guess $> is the rest?

$(EXE): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

%.o : %.cpp
	$(CC) $(CFLAGS) -c -o $@ $< 

